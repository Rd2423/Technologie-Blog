<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="form-content">
      <label for="post-title">Title</label><br />
      <input
        name="post-title"
        class="comment-body"
        type="text"
        value="{{post.title}}"
      />

    </div>
    <div class="form-content">
      <label for="post-text">Content</label><br />
      <textarea
        class="comment-body"
        name="post-text"
      >{{post.post_text}}</textarea>

    </div>
    <div>
      created by you on
      {{post.created_at}}
      |
      <a href="/post/{{post.id}}">
        {{post.comments.length}}</a>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>
<form class="comment-form">
  <div>
    <textarea name="comment-body" class="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>